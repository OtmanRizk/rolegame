<Window x:Class="rolegame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rolegame"
        mc:Ignorable="d"
        Title="Rolegame" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="255"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Test" Background="AliceBlue"></Label>
        <Label Grid.Row="0" Grid.Column="1" Content="Test" Background="Gray"></Label>
        <Label Grid.Row="1" Grid.Column="0" Content="Test" Background="Green"></Label>
        <Label Grid.Row="1" Grid.Column="1" Content="Test" Background="Red"></Label>
        <Label Grid.Row="2" Grid.Column="0" Content="Test" Background="Purple"></Label>
        <Label Grid.Row="2" Grid.Column="1" Content="Test" Background="Yellow"></Label>


    </Grid>
</Window>
